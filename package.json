{
  "name": "@wcm/forms-sna",
  "version": "1.1.0",
  "description": "Boilerplate module",
  "main": "app",
  "scripts": {
    "test": "NODE_ENV=test APP=test ./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha"
  },
  "publishConfig": {
    "@wcm:registry": "https://nexusrepo.antwerpen.be/repository/npm-private/"
  },
  "keywords": [
    "SnaForms",
    "WCM",
    "Pelorus",
    "module",
    "CMS"
  ],
  "wcmModule": {
    "angularDirPath": "public/app/",
    "cssDirPath": "public/styles/",
    "moduleConfig": {
      "angularModule": "wcm-forms-sna",
      "operationType": "sna-forms",
      "machineName": "sna-forms",
      "navigationItem": false,
      "authentication": {
        "requiresLogin": true
      }
    },
    "variables": [
      {
        "label": "Auth API url",
        "description": "url for authentication",
        "key": "authApiURL",
        "value": "",
        "type": "text"
      },
      {
        "label": "Auth Client Id",
        "description": "Client id for authentication",
        "key": "authClientId",
        "value": "",
        "type": "password"
      },
      {
        "label": "Auth Client Secret",
        "description": "Client secret for authentication",
        "key": "authClientSecret",
        "value": "",
        "type": "password"
      },
      {
        "label": "Forms API url",
        "description": "url for forms",
        "key": "formsApiURL",
        "value": "",
        "type": "text"
      },
      {
        "label": "forms API key",
        "description": "apiKey for forms",
        "key": "formsApiKey",
        "value": "",
        "type": "password"
      },
      {
        "label": "forms tenant id",
        "description": "tenant id for forms",
        "key": "formsTenantId",
        "value": "",
        "type": "text"
      }
    ]
  },
  "author": "Jeroen Valcke",
  "license": "ISC",
  "dependencies": {
    "@wcm/module-helper": "1.0.0",
    "glob": "^7.1.2",
    "path": "^0.12.7",
    "q": "^1.5.1",
    "ramda": "^0.25.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.5",
    "rootpath": "~0.1.2"
  },
  "devDependencies": {
    "@district01/eslint-config": "1.0.0",
    "apidoc-swagger": "git+https://github.com/JvJefke/apidoc-swagger.git",
    "chai": "~4.1.2",
    "gulp": "~3.9.1",
    "gulp-angular-templatecache": "~2.0.0",
    "gulp-apidoc": "~0.2.0",
    "gulp-apidoc-swagger": "~0.2.2",
    "gulp-replace": "~0.5.4",
    "istanbul": "^0.4.5",
    "mocha": "~4.0.1",
    "run-sequence": "~1.2.2",
    "sinon": "~4.0.2"
  }
}
